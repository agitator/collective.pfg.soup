<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:main fill-slot="main">
  <tal:main-macro metal:define-macro="main">
    
    <h1 class="documentFirstHeading">Form Data Manager</h1>
    
    <table id="pfgsoupdata"
           tal:attributes="data-ajaxurl python:context.absolute_url()+'/@@pfgsoupdata'">
        <thead>
           <tr>
             <tal:loop repeat="colinfo view/columns">
               <th tal:attributes="class python:'datarow-'+colinfo[1];">
                   <span tal:replace="python:colinfo[0]">Title</span>
               </th>
             </tal:loop>
           </tr>
        </thead>
        <tbody>
            <tr>
              <td tal:attributes="columnspan: python:len(view.columns())">Bitte warte. Lade Daten...</td>
            </tr>  
        </tbody>
        <tfoot>
           <tr>
             <tal:loop repeat="colinfo view/columns">
               <th>
                   <input type="text" class="search_init" value="Search engines" name="search_engine"                          
                          tal:attributes="value python:'Suche in '+ colinfo[0];
                                          name python:colinfo[0];" >
               </th>
             </tal:loop>
           </tr>
        </tfoot>
        
    </table>

  </tal:main-macro>
</metal:main>

</body>
</html>